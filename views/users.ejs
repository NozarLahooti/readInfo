<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Challenges</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <div class="container">
    <h1>User Challenges</h1>

    <ul class="challenge-list">
      <% users.forEach(user => { %>
        <li><%= user.name %></li>
      <% }) %>
    </ul>

    <h2>Send a New Challenge</h2>
    <form action="/challenges" method="POST" class="challenge-form">
      <input
        type="text"
        name="text"
        placeholder="Enter your challenge"
        required
        maxlength="100"
      />
      <button type="submit">Send Challenge</button>
    </form>
  </div>
</body>
</html>
